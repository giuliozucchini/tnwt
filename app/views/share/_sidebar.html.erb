	<br />
	<div class="partial-box">

		<h3 class="report-title sidetitle">
			<%= @report.title %>
		</h3>

		<hr class="linea">

		<div>
		    <ul id='sidelist', class="report-articles">
		  		<% @articles.each do |article| %>
		  			<li class="titoli">
						
						<small class="hidden">
							<strong><%= link_to "x", report_article_path(@report, article), method: :delete %>
							</strong>
						</small>
		  				<%= link_to article.title, article_path(article), :data => { :report_id => @report.id } %>
		  			</li>

				<%end%>
			</ul>
		</div>

<!-- 		add method: :delete %> -->
<!-- 		add method: :export %> -->

		<span class="label label-primary" >
			<%= link_to "DELETE THE REPORT", report_path(@report), class: "deletebutton" , method: :delete, data: {confirm: 'Are you sure?'} %>
		</span>

		<span class="label label-export" id="export-it">EXPORT IN PDF</span>
	</div>

